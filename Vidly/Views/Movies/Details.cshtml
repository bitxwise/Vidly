@model Vidly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Genre</th>
                <th>Release Date</th>
                <th>Date Added</th>
                <th>Number in Stock</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Genre.Name</td>
                <td>@Model.ReleaseDate.ToString("MMMM dd, yyyy")</td>
                <td>@Model.AddedDate.ToString("MMMM dd, yyyy")</td>
                <td>@Model.NumberInStock</td>
            </tr>
        </tbody>
    </table>
</div>